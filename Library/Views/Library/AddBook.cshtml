@model Book

<div class="bg-primary p-2 text-white text-center">
    <h2>Добавить книгу</h2>
</div>

<form asp-action="AddBook" method="post" class="m-4">
    <div class="form-group">
        <label>Название</label>
        <input asp-for="BookName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Тип</label>
        <select asp-for="BookType" class="form-control">
            <option value="">Выберете</option>
            <option value="Учебная">Учебная</option>
            <option value="Развлекательная">Развлекательная</option>
        </select>
    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-primary">Добавить</button>
    </div>
</form>